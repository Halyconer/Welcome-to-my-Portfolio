# Environment Configuration Example
# Copy this file to .env and modify as needed

# Set to 'development' to allow curl/Postman requests, 'production' for strict origin checking
FLASK_ENV=development

# Development mode flag - set to 'true' to enable development features
# When true, allows requests from any origin and skips authentication checks
DEVELOPMENT_MODE=true

# Bulb configuration - IP address of your smart bulb
BULB_IP=192.168.1.210

# Allowed origin for production mode - only requests from this origin will be allowed
ALLOWED_ORIGIN=https://halyconer.github.io/Welcome-to-my-Portfolio/
